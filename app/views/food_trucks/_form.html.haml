= form_for @food_truck do |f|
  - if @food_truck.errors.any?
    #error_explanation
      %h2= "#{pluralize(@food_truck.errors.count, "error")} prohibited this food_truck from being saved:"
      %ul
        - @food_truck.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude

  .actions
    = f.submit 'Save'
